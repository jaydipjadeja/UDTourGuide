<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newyork" />

        <TextView
            android:id="@+id/title_main_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_image"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/title_main"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/des_main_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_main_view"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/des_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/more_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="More"
            android:gravity="center"
            android:layout_margin="16dp"
            android:layout_below="@id/des_main_view"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</LinearLayout>
</ScrollView>